# RAG Agent Service Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
RAG_APP_NAME="RAG Agent Service"
RAG_APP_VERSION="0.1.0"
RAG_DEBUG=true
RAG_ENVIRONMENT=development  # development, staging, production

# ===========================================
# Server Settings
# ===========================================
RAG_HOST=0.0.0.0
RAG_PORT=8000
RAG_WORKERS=1

# ===========================================
# LLM Provider Settings
# ===========================================
# OpenAI (required for embeddings and chat)
RAG_OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (optional)
RAG_ANTHROPIC_API_KEY=

# Default provider and model
RAG_DEFAULT_LLM_PROVIDER=openai
RAG_DEFAULT_MODEL=gpt-4o-mini
RAG_LLM_MODEL=gpt-4o-mini

# ===========================================
# Embedding Settings
# ===========================================
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_EMBEDDING_DIMENSION=1536

# ===========================================
# Qdrant Vector Database
# ===========================================
# Use "memory" for in-memory storage (development)
RAG_QDRANT_HOST=localhost
RAG_QDRANT_PORT=6333
RAG_QDRANT_API_KEY=
RAG_QDRANT_COLLECTION=documents

# ===========================================
# Document Processing
# ===========================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_DOCUMENT_SIZE_MB=50

# ===========================================
# RAG Pipeline Settings
# ===========================================
RAG_RETRIEVAL_TOP_K=5
RAG_RETRIEVAL_SCORE_THRESHOLD=
RAG_RERANK_ENABLED=false
RAG_HYBRID_SEARCH_ENABLED=true
RAG_HYBRID_ALPHA=0.5

# ===========================================
# Agent Settings
# ===========================================
RAG_AGENT_MAX_ITERATIONS=10
RAG_AGENT_TIMEOUT_SECONDS=120

# ===========================================
# Logging & Observability
# ===========================================
RAG_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
RAG_LOG_FORMAT=console  # json, console
RAG_ENABLE_TRACING=true
RAG_OTLP_ENDPOINT=http://localhost:4317

# ===========================================
# Gateway Integration
# ===========================================
# URL of the Go LLM Gateway
RAG_GATEWAY_URL=http://localhost:8080
RAG_GATEWAY_API_KEY=
