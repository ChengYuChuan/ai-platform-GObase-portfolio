# AI Platform Portfolio - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# Service Configuration
# =============================================================================

# Default LLM provider (openai, anthropic, ollama)
DEFAULT_PROVIDER=openai

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# =============================================================================
# Database (for RAG service)
# =============================================================================

# PostgreSQL connection (default for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ragdb

# =============================================================================
# Optional: Local Development Overrides
# =============================================================================

# Uncomment for pretty logs during development
# LOG_FORMAT=pretty
# LOG_LEVEL=debug
